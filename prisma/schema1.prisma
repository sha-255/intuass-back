generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("file:./devv.db")
}

model User {
  id Int @id @default(autoincrement()) @unique
  wallet Wallet?
  cards Cards?
}

model Wallet {
  id  Int @id @default(autoincrement()) @unique
  user  User  @relation(fields: [userId], references: [id])
  userId  Int @unique
  wallet_address String? @unique
  inas Int
  reward Int
  stake Stake?
}

model Stake {
  id  Int @id @default(autoincrement()) @unique
  wallet  Wallet?  @relation(fields: [wallet_address], references: [wallet_address])
  wallet_address String @unique
  time DateTime
  pool Int
  reward Int
  percent Int
}

model Cards {
  id  Int @id @default(autoincrement()) @unique
  user  User  @relation(fields: [userId], references: [id])
  userId  Int @unique
  pool Int
  number Int
  reload_time DateTime
  cost Int
  url String
}